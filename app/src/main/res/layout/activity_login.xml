<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.iaralopes.empresaskotlin.Login.LoginViewModel"/>
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        tools:context=".Login.LoginActivity">

        <ImageView
            android:id="@+id/loginLogo"
            android:layout_width="185dp"
            android:layout_height="45dp"
            android:layout_marginBottom="46dp"
            android:layout_marginEnd="88dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="63dp"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="146.5dp"
            android:layout_height="47dp"
            android:layout_marginEnd="107dp"
            android:layout_marginStart="107dp"
            android:layout_marginTop="156dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="BEM-VINDO AO EMPRESAS"
            android:textColor="@color/charcoal_grey"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="219dp"
            android:layout_marginBottom="59dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3.5sp"
            android:textColor="@color/charcoal_grey"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Lorem ipsum dolor sit amet, contetur adipiscing elit. Nunc accumsan."
            />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="E-mail"
                    android:letterSpacing="-0.01"
                    android:textColor="@color/charcoal_grey"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:text="@={viewModel.email}"/>
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:letterSpacing="-0.01"
                    android:textColor="@color/charcoal_grey"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:text="@={viewModel.password}"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="#57bbbc"
                android:text="ENTRAR"
                android:textColor="#fff"
                android:textStyle="bold"
                android:onClick="onLoginClick"/>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


</layout>
